 
 

<table class="table">
    <tr>
        <th>
             InvoiceId
        </th>
        <th>
            Description
        </th>
        <th>
            Amount
        </th>
        <th>
           UnitPrice
        </th>
        <th></th>
    </tr>

@foreach (var item in ViewBag.InvoicesDetails) {
    <tr>
        <td>
             @item.InvoiceId
        </td>
        <td>
            @item.Description
        </td>
        <td>
          @item.Amount
        </td>
        <td>
              @item.UnitPrice
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id , idInvoice = item.InvoiceId }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id,idInvoice=item.InvoiceId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id , idInvoice = item.InvoiceId })
        </td>
    </tr>
}

</table>
